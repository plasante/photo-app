<% if current_user %>
	<div class="jumbotron">
    	<h2>Welcome to the Grocery App!</h2>
    	<p>
        	<%= link_to 'Save money now!', saves_path, class: 'btn btn-primary sign-up' %>
        </p>
    </div>
<% else %>
    <div class="jumbotron">
        <h2>Welcome to the Grocery App!</h2>
        <p class="lead">
            You'll love saving money with our application.
        </p>
    </div>
    <div class="row">
        <div class="plans clearfix">
        	<div class="col-lg-4 col-lg-offset-2 plan">
                <h2>Free Plan</h2>
                <div class="price pull-right">
                    Price: $0
                </div>
                <div class="features">
                    <ul>
                        <li>Maximum of 10 articles per Shopping List</li>
                        <li>Responsive design</li>
                        <li>Access anywhere</li>
                    </ul>
                </div>
                    <p>
                        <%= link_to 'Sign Up', new_user_registration_path, class: 'btn btn-primary sign-up' %>
                    </p>
                    <p>
                        <%= link_to 'Save money now!', saves_path, class: 'btn btn-primary sign-up' %>
                    </p>
            </div>
            <div class="col-lg-4 plan">
                <h2>Premium Plan</h2>
                <div class="price pull-right">
                    Price: $1
                </div>
                <div class="features">
                    <ul>
                        <li>100 items in your Shopping List</li>
                        <li>Responsive design</li>
                        <li>Access anywhere</li>
                    </ul>
                </div>
                    <p>
                        <%= link_to 'Subscribe', charges_new_path, class: 'btn btn-primary sign-up' %>
                    </p>
            </div>
        </div>
    </div>
<% end %>